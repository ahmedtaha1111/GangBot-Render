{
  "functions": {
    "api/ping.js": {
      "runtime": "nodejs18.x"
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/ping",
      "destination": "/api/ping.js"
    },
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/:path*",
      "destination": "/public/index.html"
    }
  ]
}
